{
    "git.mergeEditor": true,
    "files.exclude": {
        "**/.git": true,
        "**/.pytest_cache": true,
        "**/__pycache__": true,
        "**/.venv": true,
        "**/.svn": true,
        "**/.coverage": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true
    },
    "python.languageServer": "Pylance",
    "python.testing.pytestArgs": [
        "tests"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true

}